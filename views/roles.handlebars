{{#section 'head'}}
    <link href="/assets/css/newStyle.css" rel="stylesheet">
{{/section}}

<div class="right_col">
          <div>
            <div class="row">
              <div class="clearfix"></div>

              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>角色管理 <small>Custom design</small></h2>
                    
                    <div style="float: right;">
                      <a href="/admin/roles/create" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> 新增 </a>
                    </div>

                    <div class="clearfix"></div>
                  </div>

                  <div class="x_content"  style="overflow: visible;">

                    <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer"  style="overflow: visible;">
                      <div class="row">
                          <div class="col-sm-6">
                               <div class="dataTables_length" style="width: auto;">
                                  <label>
                                     显示条数 
                                     <select name="datatable_length" id="pageSizeSelect" class="form-control input-sm">
                                         <option value="15">15</option>
                                         <option value="20">20</option>
                                         <option value="25">25</option>
                                         <option value="30">30</option>
                                     </select>
                                   </label>
                               </div>
                          </div>
                      </div>
                      <div class="row">
                        <div class="col-sm-12" style="min-height:120px;">
                            <table class="table table-striped jambo_table bulk_action">
                                <thead>
                                    <tr class="headings">
                                      <th>
                                        <input type="checkbox" id="check-all" class="flat">
                                      </th>
                                      <th class="column-title">角色 </th>
                                      <th class="column-title no-link last"><span class="nobr">操作</span>
                                      </th>
                                      <th class="bulk-actions" colspan="7">
                                         <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                      </th>
                                    </tr>
                                </thead>
      
                                <tbody id="datalistBox">
                                  
                                </tbody>
                            </table>
                            <div id="loadingBox" class="loadingBox_wdq">
                                <div class="spinner">
                                  <div class="rect1"></div>
                                  <div class="rect2"></div>
                                  <div class="rect3"></div>
                                  <div class="rect4"></div>
                                  <div class="rect5"></div>
                                </div>
                            </div>
                            <div class="noDataBox_wdq" id="noDataBox">
                                <p>暂时没有数据</p>
                            </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-sm-5">
                            <div class="dataTables_info">总页数<span id="pageTotle"></span> 总条数<span id="dataTotle"></span></div>
                        </div>
                        <div class="col-sm-7">
                            <div class="dataTables_paginate paging_simple_numbers" id="datatable_paginate">
                                <ul class="pagination" style="margin: 0px" id="paginationBox">
                                    
                                </ul>
                            </div>
                        </div>
                      </div>

                    </div>
							
						
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>



{{#section 'script'}}
    <script type="text/javascript" src="/assets/js/controller/roles.js"></script>
{{/section}}