 {{#section 'head'}}
    <link href="/vendors/fullcalendar/dist/fullcalendar.min.css" rel="stylesheet">
    <link href="/vendors/fullcalendar/dist/fullcalendar.print.css" rel="stylesheet" media="print">
    <link href="/assets/css/newStyle.css" rel="stylesheet">
{{/section}}

        <div class="right_col" role="main">
          <div class="row">

            <div class="clearfix"></div>

            <div class="row">
              <div class="col-md-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>员工排班 <small>Sessions</small></h2>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <div id='calendar' class="fc fc-unthemed fc-ltr">
                       <div class="fc-toolbar fc-header-toolbar">
                          <div class="fc-left">
                            <div class="fc-button-group">
                              <button type="button" class="fc-prev-button fc-button fc-state-default fc-corner-left" id="previousBtn">
                                <span class="fc-icon fc-icon-left-single-arrow"></span>
                              </button>
                              <button type="button" class="fc-next-button fc-button fc-state-default fc-corner-right" id="nextBtn">
                                <span class="fc-icon fc-icon-right-single-arrow"></span>
                              </button>
                            </div>
                            <button type="button" class="fc-today-button fc-button fc-state-default fc-corner-left fc-corner-right" id="thisWeekBtn">本周</button>
                          </div>
                          <div class="fc-right">
                            <div class="fc-button-group">                         
                              <button type="button" id="addDateBtn" class="fc-agendaWeek-button fc-button fc-state-default">添加</button>
                              <button type="button" id="delDateBtn" class="fc-agendaDay-button fc-button fc-state-default">删除</button>
                            </div>
                          </div>
                          <div class="fc-center">
                            <h2 id="dateShowTitle">January 2018</h2></div>
                          <div class="fc-clear"></div>
                        </div>
                        <div class="fc-view-container" style="">
                         <div class="fc-view fc-agendaWeek-view fc-agenda-view" style="">

                            <div class="fc-row fc-widget-header" style="border:1px solid #ddd; width:100%;">
                              <table>
                                <thead class="thead_wdq" id="theadBox">
                                  <tr>
                                    <th class="fc-axis fc-widget-header" style="width: 40px;"></th>
                                    <th class="fc-day-header fc-widget-header dateth">
                                      <span>Sun</span></th>
                                    <th class="fc-day-header fc-widget-header dateth">
                                      <span>Mon</span></th>
                                    <th class="fc-day-header fc-widget-header dateth">
                                      <span>Tue</span></th>
                                    <th class="fc-day-header fc-widget-header dateth">
                                      <span>Wed</span></th>
                                    <th class="fc-day-header fc-widget-header dateth">
                                      <span>Thu</span></th>
                                    <th class="fc-day-header fc-widget-header dateth">
                                      <span>Fri</span></th>
                                    <th class="fc-day-header fc-widget-header dateth">
                                      <span>Sat</span></th>
                                  </tr>
                                </thead>
                                <tbody class="tbody_wdq" id="dataBox">
                                </tbody>
                              </table>
                            </div>
      

                         </div>
                       </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>



        <div class="modal fade" id="addFormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="exampleModalLabel">添加排班记录</h4>
              </div>
              <div class="modal-body">
                <form class="form-horizontal">
                  <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">员工</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="addForm_name" disabled>
                    </div>
                  </div>
                  <div class="form-group" style="display:none;">
                    <label for="inputEmail3" class="col-sm-2 control-label">员工ID</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="addForm_userId" disabled>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">日期</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="addForm_date" disabled>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">上班时间</label>
                    <div class="col-sm-2">
                      <input type="text" class="form-control" id="addForm_startHours">
                    </div>
                    <div style="float:left"><span>:</span></div>
                    <div class="col-sm-2">
                      <input type="text" class="form-control" id="addForm_startMinutes">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">下班时间</label>
                    <div class="col-sm-2">
                      <input type="text" class="form-control" id="addForm_endHours">
                    </div>
                    <div style="float:left"><span>:</span></div>
                    <div class="col-sm-2">
                      <input type="text" class="form-control" id="addForm_endMinutes">
                    </div>
                  </div>
                </form>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary" id="addFormSubBtn">提交</button>
              </div>
            </div>
          </div>
        </div>

{{#section 'script'}}

  <script type="text/javascript" src="/assets/js/controller/workSchedule.js"></script>

{{/section}}